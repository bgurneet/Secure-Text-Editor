#:kivy 1.11.1
<TextEditor>:
    app_container: app_container
    nav_container: nav_container
    text_container: text_container

    BoxLayout:
        orientation: "vertical"
        id: app_container
        width: 500
        height: 500


        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0.103, 0.128, 0.159, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            spacing: 10
            orientation: "horizontal"
            id: nav_container
            size_hint: (1, 0.05)

        BoxLayout:
            orientation: "horizontal"
            id: text_container
